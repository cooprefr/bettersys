{
  "name": "betterbot-terminal",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "remotion:comps": "remotion compositions src/remotion/index.ts",
    "remotion:preview": "remotion preview src/remotion/index.ts",
    "remotion:render:promo": "mkdir -p out && remotion render src/remotion/index.ts TradeBetterPromo out/tradebetter_promo.mp4"
  },
  "dependencies": {
    "@privy-io/react-auth": "^1.32.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.6",
    "framer-motion": "^10.16.4",
    "chart.js": "^4.4.0",
    "react-chartjs-2": "^5.2.0",
    "three": "^0.158.0",
    "@react-three/fiber": "^8.15.8",
    "@react-three/drei": "^9.88.17",
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "@remotion/cli": "^4.0.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.1.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/three": "^0.158.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^1.0.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "jsdom": "^23.0.0",
    "postcss": "^8.4.31",
    "remotion": "^4.0.0",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
